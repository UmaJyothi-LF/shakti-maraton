{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0"
  },
  "include": [".//*"],
  "exclude": ["node_modules", "dist"]
}
